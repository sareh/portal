<li class="">
  <ul class="no-bullet service-box <%= service.service_type.name.downcase.gsub(/\s+/, "") %>-box">
    <li class="service-heading">
      <div class="service-type-icon"><i class="<%= service.service_type.icon %>"></i></div><%= link_to service.name, service %></li>
    <li class="service-type-name"><%= service.service_type.name%></li>
    <li class="service-description"><%= truncate(service.description, length: 100) %></li>
    <li>
        <% service.tags.each do |tag| %>
          <%= link_to tag, services_path(tags:tag.name), class: "tag" %>
        <% end %>
    </li>
  </ul>
</li>